@model ExamSysttem.ViewModels.QuestionReadForAdmin

<h2>Are you sure you want to delete this question?</h2>
<div>
    <h4>@Model.QuestionText</h4>
    <p>Choice A: @Model.ChoiceA</p>
    <p>Choice B: @Model.ChoiceB</p>
    <p>Choice C: @Model.ChoiceC</p>
    <p>Choice D: @Model.ChoiceD</p>
    <p>Correct Answer: @Model.CorrectAnswer</p>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
