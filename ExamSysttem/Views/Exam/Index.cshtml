@model IEnumerable<ExamSysttem.ViewModels.ExamRead>

@{
    ViewData["Title"] = "Exams";
}

<h2>Exams</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Exam</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created On</th>
            <th>Number Of Questions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model)
        {
            <tr>
                <td>@exam.Name</td>
                <td>@exam.Description</td>
                <td>@exam.CreatedOn.ToShortDateString()</td>
                <td>@exam.NumberOfQuestions</td>
                <td>
                    <a asp-action="Details" asp-route-id="@exam.Id" class="btn btn-sm btn-primary">View</a>
                    <a asp-action="Edit" asp-route-id="@exam.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@exam.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
